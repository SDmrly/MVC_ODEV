@model IEnumerable<MVC_ODEV.Models.Tbl_Araclar>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/CSS/Style.css" rel="stylesheet" />
</head>
<body>
    <h1>Sakarya BİP Otomotiv</h1>
    <hr />

    <h2>Araç Yönetim</h2>
    <p>
        @Html.ActionLink("Araç Ekle", "Create")
    </p>
    <table class="table" cellpadding="5" cellspacing="0" border="1">
        <tr>
            <th>
                Görüntü
            </th>
            <th>
                MARKA
            </th>
            <th>
                MODEL
            </th>
            <th>
                MODEL YILI
            </th>
            <th>
                YAKIT
            </th>
            <th>
                VİTES
            </th>
            <th>
                FİYAT
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @{ 
                    var dir = "/VehicleImages/" + item.Arac_Id + ".jpg";
                    <img src="@Url.Content(dir)" width="100"/>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model_Yili)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yakit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vites)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.Arac_Id }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Arac_Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Arac_Id }) |
                @Html.ActionLink("Resim Yükle", "SaveImages", new { id = item.Arac_Id })
            </td>
        </tr>
    }
    </table>

    <p>
        @Html.ActionLink("Ana Sayfa", "Index", "Home") |
        @Html.ActionLink("Admin Profil", "AdminProfil", "Admin") |
        @Html.ActionLink("Araç Listesi", "Index", "Vehicle")
    </p>
</body>
</html>
