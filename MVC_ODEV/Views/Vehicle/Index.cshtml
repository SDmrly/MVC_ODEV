@model IEnumerable<MVC_ODEV.Models.Tbl_Araclar>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/CSS/Style.css" rel="stylesheet" />
</head>
<body>
    <h1>Sakarya BİP Otomotiv</h1>
    <hr />
    <h3>Araç Listesi</h3>
    <table class="table" border="1" cellpadding="5" cellspacing="0">
        <tr>
            <th>
                Görüntü
            </th>
            <th>
                Marka
            </th>
            <th>
                Model
            </th>
            <th>
                Model Yılı
            </th>
            <th>
                Yakıt
            </th>
            <th>
                Vites
            </th>
            <th>
                Fiyat
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @{
                    var dir = "/VehicleImages/" + item.Arac_Id + ".jpg";
                    string FolderPath = Path.Combine(Server.MapPath(dir));
                    if (System.IO.File.Exists(FolderPath))
                    {
                        <img src="@Url.Content(dir)" width="100" />
                    }
                    
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model_Yili)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yakit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vites)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.ActionLink("Detay", "Details", new { id = item.Arac_Id }) |
                @Html.ActionLink("Rezervasyon", "Rezervations", new { id = item.Arac_Id })
            </td>
        </tr>
    }
    
    </table>
    
    <p>
        @Html.ActionLink("Ana Sayfa", "Index", "Home") |
        @Html.ActionLink("Hakkımızda", "About", "Home") |
        @Html.ActionLink("Oturum Aç", "Giris", "Customer") |
        @Html.ActionLink("Profil", "Profil", "Customer")
    </p>
</body>
</html>
